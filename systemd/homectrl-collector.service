[Unit]
Description=DZEM HomeCtrl Collector Service
After=multi-user.target

[Service]
Type=simple
User=dzem
Environment="XDG_RUNTIME_DIR=/run/user/1000"
WorkingDirectory=/home/dzem/HOMECTRL/
ExecStart=/usr/bin/python /home/dzem/HOMECTRL/collector.py
KillSignal=SIGINT
Restart=always
StandardOutput=append:/home/dzem/HOMECTRL/logs/collector.log
StandardError=append:/home/dzem/HOMECTRL/logs/collector.log

[Install]
WantedBy=multi-user.target
